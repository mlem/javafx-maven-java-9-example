<VBox id="vbox" prefHeight="400" prefWidth="800"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.mlem.HelloController">

    <MenuBar>
        <Menu text="Tiere" fx:id="tiereMenu">
            <MenuItem text="Affe"/>
            <MenuItem text="Groilla"/>
            <MenuItem text="Wolf"/>
            <MenuItem text="Reh"/>
            <MenuItem text="LÃ¶we"/>
        </Menu>
    </MenuBar>

    <MigPane id="migPane"
             styleClass="main-panel"
             layout="insets 20"
             cols="[label, pref!][grow, 50::]"
             rows="">

        <Label text="First Name:"/>
        <TextField fx:id="firstNameField" prefColumnCount="30" MigPane.cc="growx, wrap"/>
